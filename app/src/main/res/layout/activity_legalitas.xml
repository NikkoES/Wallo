<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.legalitas.LegalitasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipe Identitas :"
            android:textColor="@color/textColorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_tipe_identitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_arrow_drop_down" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ketentuan Foto"
            android:textColor="@color/textColorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_correct"
                android:layout_width="0dp"
                android:layout_height="124dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/image_incorrect"
                android:layout_width="0dp"
                android:layout_height="124dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColorBlack"
            android:textSize="16sp"
            tools:text="1. Blablabal\n2. blablabal\n3. blabal" />

        <ImageView
            android:id="@+id/image_legalitas"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_ambil_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorWhite"
            android:textStyle="bold"
            tools:text="ambil foto ktp" />

    </LinearLayout>

</ScrollView>